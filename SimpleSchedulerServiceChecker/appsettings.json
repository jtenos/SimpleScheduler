{
  "ApiUrl": "https://localhost:7235",

  "ServiceNames": [
    "xyz"
  ],

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Email"
    ],
    "MinimumLevel": "Debug",
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "Email",
        "Args": {
          "connectionInfo": {
            "Port": 25,
            "FromEmail": "noreply@example.com",
            "ToEmail": "admin@example.com",
            "EmailSubject": "Scheduler Service Checker Error (DEV)",
            "EnableSsl": false,
            "MailServer": "myemailserver",
            "IsBodyHtml": false
          },
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Fatal",
          "period": "00:00:05"
        }
      }
    ]
  }
}
