{
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "SimpleScheduler": "Server=(localdb)\\MSSqlLocalDb;Database=SimpleSchedulerSqlServerDB;Integrated Security=True;"
  },

  "MailSettings": {
    "Port": 25,
    "EmailFrom": "noreply@example.com",
    "AdminEmail": "admin@example.com",
    "Host": "mysmtpserver",
    "UserName": "username",
    "Password": "password"
  },

  "WorkerPath": "C:\\temp\\workers",
  "WebUrl": "https://localhost:7235",
  "EnvironmentName": "DEV",

  "Jwt": {
    "Key": "64 hex characters",
    "Issuer": "localhost",
    "Audience": "https://localhost:7235"
  },

  "InternalSecretAuthKey": "32 hex characters",

  "AllowLoginDropdown": true,

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "SimpleSchedulerSerilogEmail"
    ],
    "MinimumLevel": "Debug",
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "Email",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Fatal"
        }
      }
    ]
  }
}
