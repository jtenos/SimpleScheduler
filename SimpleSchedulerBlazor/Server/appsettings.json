{
  "AllowedHosts": "*",

  "AppSettings": {
    "ConnectionString": "Server=(localdb)\\MSSqlLocalDb;Database=SimpleScheduler_LocalDev;Integrated Security=True;",

    "MailSettings": {
      "Port": 25,
      "EmailFrom": "noreply@example.com",
      "AdminEmail": "admin@example.com",
      "Host": "mysmtpserver",
      "UserName": "username",
      "Password": "password"
    },

    "WorkerPath": "/tmp/workers",
    "WebUrl": "https://localhost:7235",
    "EnvironmentName": "DEV",

    "Jwt": {
      "Key": "64 hex characters",
      "Issuer": "localhost",
      "Audience": "https://localhost:7235"
    },

    "AllowLoginDropdown": true
  },

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Email"
    ],
    "MinimumLevel": "Debug",
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "Email",
        "Args": {
          "connectionInfo": {
            "Port": 25,
            "FromEmail": "noreply@example.com",
            "ToEmail": "admin@example.com",
            "EmailSubject": "Scheduler Error (DEV)",
            "EnableSsl": false,
            "MailServer": "myemailserver",
            "IsBodyHtml": false
          },
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Fatal",
          "period": "00:00:05"
        }
      }
    ]
  }
}
