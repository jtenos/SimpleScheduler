@page "/"
@page "/jobs/{WorkerID:long?}"

@if (Loading)
{
    <LoadingAnimation />
}
else
{
    <div class="container" style="margin-top: 25px;">
        <EditForm EditContext="SearchEditContext" class="d-flex">
            <div class="form-group">
                <label for="AllWorkersDropdown">Worker</label>
                <InputSelect @bind-Value="SearchCriteria.WorkerID" class="form-control" id="AllWorkersDropdown">
                    <option></option>
                    @foreach (Worker worker in AllWorkers)
                    {
                        <option value="@worker.ID">@worker.WorkerName</option>
                    }
                </InputSelect>
            </div>
            <div class="form-group">
                <label for="StatusDropdown">Status</label>
                <InputSelect @bind-Value="SearchCriteria.StatusCode" class="form-control" id="StatusDropdown">
                    <option></option>
                    <option value="NEW">NEW</option>
                    <option value="RUN">RUN</option>
                    <option value="SUC">SUC</option>
                    <option value="ERR">ERR</option>
                    <option value="ACK">ACK</option>
                    <option value="CAN">CAN</option>
                </InputSelect>
            </div>
        </EditForm>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Worker</th>
                <th>Queue Date</th>
                <th>Status</th>
                <th>Results</th>
            </tr>
        </thead>
        <tbody>
            @foreach (JobWithWorkerID job in JobDetails)
            {
                Worker worker = _allWorkersByID[job.WorkerID];
                Worker? parentWorker = null;
                if (worker.ParentWorkerID.HasValue)
                {
                    parentWorker = _allWorkersByID[worker.ParentWorkerID.Value];
                }

                <tr>
                    <td>
                        <div>
                            @worker.WorkerName
                        </div>
                        @if (parentWorker is not null)
                        {
                            <div>
                                (Child of @parentWorker.WorkerName)
                            </div>
                        }
                    </td>
                    <td>
                        <div>@job.QueueDateUTC.FormatDate()</div>
                        <div>@job.QueueDateUTC.FormatTime()</div>
                    </td>
                    <td>
                        @job.StatusCode
                    </td>
                    <td>
                        @if (job.HasDetailedMessage)
                        {
                            <a href="#" onclick="return false;">Details TODO</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
