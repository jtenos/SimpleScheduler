<li class="list-group-item">
    <div>
        @if (IsEditing)
        {
            <ScheduleEdit Schedule="Schedule" />
        }
        else
        {
            <div>
                @Schedule.GetFormatted()
            </div>
        }
    </div>
    <div>
        <button class="btn btn-sm btn-outline-warning" @onclick="EditSchedule"><i class="bi bi-pencil"></i> Edit</button>
        <button class="btn btn-sm btn-outline-danger" @onclick="DeleteSchedule"><i class="bi bi-trash"></i> Delete</button>
    </div>
</li>
